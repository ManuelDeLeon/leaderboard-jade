head
  title Leaderboard

body
  #outer
    +leaderboard

template(name='leaderboard')
  .leaderboard
    each players
      +player

  if selected_name
    .details
      .name #{selected_name}
      input.inc(type='button', value='Give 5 points')
  else
    .none Click a player to select

template(name='player')
  div(class="player #{selected}")
    span.name #{name}
    span.score #{score}
